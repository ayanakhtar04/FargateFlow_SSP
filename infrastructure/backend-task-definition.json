{
  "family": "smart-study-planner-backend-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "backend",
      "image": "ACCOUNT_ID.dkr.ecr.us-east-1.amazonaws.com/smart-study-planner-backend:latest",
      "portMappings": [
        {
          "containerPort": 5000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "PORT",
          "value": "5000"
        }
      ],
      "secrets": [
        {
          "name": "DB_HOST",
          "valueFrom": "arn:aws:ssm:us-east-1:ACCOUNT_ID:parameter/smart-study-planner/db-host"
        },
        {
          "name": "DB_PORT",
          "valueFrom": "arn:aws:ssm:us-east-1:ACCOUNT_ID:parameter/smart-study-planner/db-port"
        },
        {
          "name": "DB_NAME",
          "valueFrom": "arn:aws:ssm:us-east-1:ACCOUNT_ID:parameter/smart-study-planner/db-name"
        },
        {
          "name": "DB_USER",
          "valueFrom": "arn:aws:ssm:us-east-1:ACCOUNT_ID:parameter/smart-study-planner/db-user"
        },
        {
          "name": "DB_PASSWORD",
          "valueFrom": "arn:aws:ssm:us-east-1:ACCOUNT_ID:parameter/smart-study-planner/db-password"
        },
        {
          "name": "JWT_SECRET",
          "valueFrom": "arn:aws:ssm:us-east-1:ACCOUNT_ID:parameter/smart-study-planner/jwt-secret"
        },
        {
          "name": "AWS_ACCESS_KEY_ID",
          "valueFrom": "arn:aws:ssm:us-east-1:ACCOUNT_ID:parameter/smart-study-planner/aws-access-key-id"
        },
        {
          "name": "AWS_SECRET_ACCESS_KEY",
          "valueFrom": "arn:aws:ssm:us-east-1:ACCOUNT_ID:parameter/smart-study-planner/aws-secret-access-key"
        },
        {
          "name": "SES_FROM_EMAIL",
          "valueFrom": "arn:aws:ssm:us-east-1:ACCOUNT_ID:parameter/smart-study-planner/ses-from-email"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/smart-study-planner-backend",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:5000/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
} 